{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Doppelkopf Scorer",
  "version": "0.1.0",
  "identifier": "doppelkopf.scorer.app",
  "build": {
    "frontendDist": "../dist-tauri",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Doppelkopf Scorer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Doppelkopf Scorer"
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
    
  }
}
