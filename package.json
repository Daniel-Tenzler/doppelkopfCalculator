{
  "name": "doppelkopf-scorer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A dual-platform Doppelkopf card game scoring application for web and desktop",
  "keywords": [
    "doppelkopf",
    "card-game",
    "scoring",
    "tauri",
    "react",
    "typescript",
    "desktop",
    "web",
    "cross-platform"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:tauri": "tsc -b && cross-env TAURI_PLATFORM=true vite build",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build && rimraf dist-tauri/bundle && mkdirp dist-tauri/bundle && cp -r src-tauri/target/release/bundle/* dist-tauri/bundle/",
    "lint": "eslint . && tsc --noEmit --pretty false",
    "preview": "vite preview",
    "build:all": "npm run build && npm run tauri:build",
    "clean": "rimraf dist dist-tauri && rimraf src-tauri/target/release/bundle",
    "dev:web": "vite",
    "dev:desktop": "tauri dev"
  },
  "dependencies": {
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@types/styled-components": "^5.1.36",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
